@model DTech.Models.EF.Topic

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.mainPage = "information";
    ViewBag.page = "topic";
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!--begin::App Content Header-->
            <div class="app-content-header">
                <!--begin::Container-->
                <div class="container-fluid">
                    <!--begin::Row-->
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="mb-0">Edit Topic</h3>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-end">
                                <li class="breadcrumb-item">
                                    <a class="btn btn-sm btn-success text-center">
                                        <i class="fa-solid fa-house fa-sm"></i>
                                        Home
                                    </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a asp-action="Index">
                                        Topics
                                    </a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Edit
                                </li>
                            </ol>
                        </div>
                    </div> <!--end::Row-->
                </div> <!--end::Container-->
            </div> <!--end::App Content Header-->
            <!--begin::App Content-->
            <div class="app-content">
                <!--begin::Container-->
                <div class="container-fluid">
                    <!--begin::Row-->
                    <div class="row">
                        <div class="col-12">
                            <!-- Default box -->
                            <div class="card">
                                <div class="card-header">
                                    <div class="row text-center">
                                        @Html.Partial("Message")
                                    </div>
                                </div>
                                <div class="card-body">
                                    <input type="hidden" asp-for="TopicId" />

                                    <div class="row">
                                        <div class="col">
                                            <div class="form-group">
                                                <label asp-for="Name" class="control-label">
                                                    @Html.DisplayNameFor(model => model.Name)
                                                </label>
                                                <input asp-for="Name" class="form-control" />
                                                <span asp-validation-for="Name" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col">
                                            <div class="form-group">
                                                <label asp-for="Slug" class="control-label">
                                                    @Html.DisplayNameFor(model => model.Slug)
                                                </label>
                                                <input asp-for="Slug" class="form-control" readonly />
                                                <span asp-validation-for="Slug" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col">
                                            <div class="form-group">
                                                <label asp-for="ParentId" class="control-label">
                                                    @Html.DisplayNameFor(model => model.ParentId)
                                                </label>
                                                <select asp-for="ParentId" class="form-control" asp-items="ViewBag.ParentId">
                                                    <option value="">(None)</option>
                                                </select>
                                                <span asp-validation-for="ParentId" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col">
                                            <div class="form-group">
                                                <label asp-for="Orders" class="control-label">
                                                    @Html.DisplayNameFor(model => model.Orders)
                                                </label>
                                                <input asp-for="Orders" class="form-control" readonly />
                                                <span asp-validation-for="Orders" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-6 col-sm-4">
                                            <div class="form-group">
                                                <label asp-for="CreatedBy" class="control-label">
                                                    @Html.DisplayNameFor(model => model.CreatedBy)
                                                </label>
                                                <input asp-for="CreatedBy" class="form-control" readonly />
                                                <span asp-validation-for="CreatedBy" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-lg-6 col-sm-8">
                                            <div class="form-group">
                                                <label asp-for="CreateDate" class="control-label">
                                                    @Html.DisplayNameFor(model => model.CreateDate)
                                                </label>
                                                <input asp-for="CreateDate" class="form-control" readonly />
                                                <span asp-validation-for="CreateDate" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-6 col-sm-4">
                                            <div class="form-group">
                                                <label asp-for="UpdatedBy" class="control-label">
                                                    @Html.DisplayNameFor(model => model.UpdatedBy)
                                                </label>
                                                <input asp-for="UpdatedBy" class="form-control" readonly />
                                                <span asp-validation-for="UpdatedBy" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-lg-6 col-sm-8">
                                            <div class="form-group">
                                                <label asp-for="UpdateDate" class="control-label">
                                                    @Html.DisplayNameFor(model => model.UpdateDate)
                                                </label>
                                                <input asp-for="UpdateDate" class="form-control" readonly />
                                                <span asp-validation-for="UpdateDate" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col">
                                            <div class="form-group">
                                                <label asp-for="Status" class="control-label"></label>
                                                <select asp-for="Status" class="form-control" asp-items="ViewBag.Status"></select>
                                                <span asp-validation-for="Status" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div> <!-- /.card-body -->

                                <div class="card-footer">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa-solid fa-floppy-disk fa-sm"></i>
                                            Save
                                        </button> |
                                        <a asp-action="Index" class="btn btn-sm btn-success text-center" style="padding-bottom: 0.5em; padding-top: 0.5em;">
                                            <i class="fa-solid fa-right-from-bracket fa-rotate-180"></i>
                                            Back to List
                                        </a>
                                    </div>
                                </div> <!-- /.card-footer-->
                            </div> <!-- /.card -->
                        </div>
                    </div> <!--end::Row-->
                </div> <!--end::Container-->
            </div> <!--end::App Content-->
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
