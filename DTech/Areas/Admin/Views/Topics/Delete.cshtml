@model DTech.Models.EF.Topic

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.mainPage = "information";
    ViewBag.page = "topic";
}

<!--begin::App Content Header-->
<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-sm-6">
                <h3 class="mb-0">Delete</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item">
                        <a class="btn btn-sm btn-success text-center">
                            <i class="fa-solid fa-house fa-sm"></i>
                            Home
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-action="Index">
                            Topic
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Delete
                    </li>
                </ol>
            </div>
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div> <!--end::App Content Header-->
<!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <strong>Are you sure you want to delete this?</strong>
                    </div>
                    <div class="card-body py-0">
                        <div class="row">
                            <div class="col-9">
                                <table class="table">
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                                        <td>@Html.DisplayFor(model => model.Name)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Slug)</th>
                                        <td>@Html.DisplayFor(model => model.Slug)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.ParentId)</th>
                                        <td>@Html.DisplayFor(model => model.ParentId)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Orders)</th>
                                        <td>@Html.DisplayFor(model => model.Orders)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
                                        <td>@Html.DisplayFor(model => model.CreatedBy)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.CreateDate)</th>
                                        <td>@Html.DisplayFor(model => model.CreateDate)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.UpdatedBy)</th>
                                        <td>@Html.DisplayFor(model => model.UpdatedBy)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.UpdateDate)</th>
                                        <td>@Html.DisplayFor(model => model.UpdateDate)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Status)</th>
                                        <td>@Html.DisplayFor(model => model.Status)</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div> <!-- /.card-body -->
                    <div class="card-footer">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="TopicId" />
                            <button type="submit" class="btn btn-danger text-center">
                                <i class="fa-solid fa-trash fa-sm"></i>
                                Delete
                            </button> |
                            <a asp-action="Index" class="btn btn-sm btn-success text-center" style="padding-bottom: 0.5em; padding-top: 0.5em;">
                                <i class="fa-solid fa-right-from-bracket fa-rotate-180"></i>
                                Back to List
                            </a>
                        </form>
                    </div> <!-- /.card-footer-->
                </div> <!-- /.card -->
            </div>
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div> <!--end::App Content-->
