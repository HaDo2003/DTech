@model IEnumerable<DTech.Models.EF.Topic>

@{
    ViewData["Title"] = "Topic Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.mainPage = "information";
    ViewBag.page = "topic";
}

<!--begin::App Content Header-->
<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-sm-6">
                <h3 class="mb-0">Topic Management</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item">
                        <a class="btn btn-sm btn-success text-center">
                            <i class="fa-solid fa-house fa-sm"></i>
                            Home
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Topic
                    </li>
                </ol>
            </div>
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div> <!--end::App Content Header-->
<!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col">
                                <strong class="card-title">Topic Information</strong>
                            </div>

                            <div class="col">
                                @Html.Partial("Message")
                            </div>

                            <div class="col text-end">
                                <a asp-action="Create" class="btn btn-sm btn-success text-center">
                                    <i class="fa-solid fa-plus fa-sm"></i>
                                    Create New
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body py-0">
                        <table class="table table-bordered table-striped" id="myTable">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                                    <th>@Html.DisplayNameFor(model => model.Slug)</th>
                                    <th class="text-start">@Html.DisplayNameFor(model => model.ParentId)</th>
                                    <th class="text-start">@Html.DisplayNameFor(model => model.Orders)</th>
                                    <th>Function</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Slug)</td>
                                        <td class="text-start">@Html.DisplayFor(modelItem => item.ParentId)</td>
                                        <td class="text-start">@Html.DisplayFor(modelItem => item.Orders)</td>
                                        <td>
                                            @if (item.Status == 1)
                                            {
                                                <a asp-for="@item.Status" asp-action="StatusChange" asp-route-id="@item.TopicId" class="btn btn-sm btn-success text-center btn-custom">
                                                    <i class="fa-solid fa-toggle-on fa-sm"></i>
                                                    <span class="hover-text">Change Status</span>
                                                </a>
                                            }
                                            else if (item.Status == 0)
                                            {
                                                <a asp-for="@item.Status" asp-action="StatusChange" asp-route-id="@item.TopicId" class="btn btn-sm btn-danger text-center btn-custom">
                                                    <i class="fa-solid fa-toggle-off fa-sm"></i>
                                                    <span class="hover-text">Change Status</span>
                                                </a>
                                            }

                                            <a asp-action="Edit" asp-route-id="@item.TopicId" class="btn btn-sm btn-primary text-center btn-custom">
                                                <i class="fa-solid fa-pen-to-square fa-sm"></i>
                                                <span class="hover-text">Edit</span>
                                            </a>

                                            <a asp-action="Details" asp-route-id="@item.TopicId" class="btn btn-sm btn-info text-center btn-custom">
                                                <i class="fa-solid fa-circle-info fa-sm"></i>
                                                <span class="hover-text">Details</span>
                                            </a>

                                            <a asp-action="Delete" asp-route-id="@item.TopicId" class="btn btn-sm btn-danger text-center btn-custom">
                                                <i class="fa-solid fa-trash fa-sm"></i>
                                                <span class="hover-text">Delete</span>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div> <!-- /.card-body -->
                </div> <!-- /.card -->
            </div>
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div> <!--end::App Content-->
