@model IEnumerable<DTech.Models.EF.Order>

@{
    ViewData["Title"] = "Order Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.mainPage = "information";
    ViewBag.page = "order";
}

<!--begin::App Content Header-->
<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-sm-6">
                <h3 class="mb-0">Order Management</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item">
                        <a class="btn btn-sm btn-success text-center">
                            <i class="fa-solid fa-house fa-sm"></i>
                            Home
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Orders
                    </li>
                </ol>
            </div>
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div> <!--end::App Content Header-->
<!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col">
                                <strong class="card-title">Order Information</strong>
                            </div>
                            <div class="col text-end">
                                <a asp-action="Create" class="btn btn-sm btn-success text-center">
                                    <i class="fa-solid fa-plus fa-sm"></i>
                                    Create New
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body py-0">
                        <table class="table table-bordered table-striped" id="myTable">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.OrderId)</th>
                                    <th>@Html.DisplayNameFor(model => model.OrderDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.FinalCost)</th>
                                    <th>@Html.DisplayNameFor(model => model.Note)</th>
                                    <th>Customer Name</th>
                                    <th>Payment</th>
                                    <th>Shipping ID</th>
                                    <th>Status</th>
                                    <th>Function</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.OrderId)</td>
                                        <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.FinalCost)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Note)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Customer.FirstName) @Html.DisplayFor(modelItem => item.Customer.LastName)</td>
                                        <td>
                                            @if (item.Payment.Status.HasValue && ViewBag.StatusPaymentDictionary.ContainsKey(item.Payment.Status.Value))
                                            {
                                                @ViewBag.StatusPaymentDictionary[item.Payment.Status.Value]
                                            }
                                            else
                                            {
                                                <span>Unknown Status</span>
                                            }
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.Shipping.ShippingId)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Status.Description)</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.OrderId" class="btn btn-sm btn-primary text-center btn-custom">
                                                <i class="fa-solid fa-pen-to-square fa-sm"></i>
                                                <span class="hover-text">Edit</span>
                                            </a>

                                            <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-sm btn-info text-center btn-custom">
                                                <i class="fa-solid fa-circle-info fa-sm"></i>
                                                <span class="hover-text">Details</span>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div> <!-- /.card-body -->
                </div> <!-- /.card -->
            </div>
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div> <!--end::App Content-->
