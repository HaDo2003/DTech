@model IEnumerable<DTech.Models.EF.Coupon>

@{
    ViewData["Title"] = "Coupon Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.mainPage = "information";
    ViewBag.page = "coupon";
}

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $(document).ready(function () {
                // Handle the click event for the expired coupon
                $('.expired-btn').on('click', function (event) {
                    event.preventDefault();

                    // Show the modal
                    var confirmModal = new bootstrap.Modal($('#confirmActionModal')[0]);
                    confirmModal.show();
                });
            });
        });
    </script>
}

<!--begin::App Content Header-->
<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-sm-6">
                <h3 class="mb-0">Coupon Management</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item">
                        <a asp-action="Index" class="btn btn-sm btn-success text-center">
                            <i class="fa-solid fa-house fa-sm"></i>
                            Home
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Coupon
                    </li>
                </ol>
            </div>
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div> <!--end::App Content Header-->
<!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col">
                                <strong class="card-title">Coupon Information</strong>
                            </div>

                            <div class="col">
                                @Html.Partial("Message")
                            </div>

                            <div class="col text-end">
                                <a asp-action="Create" class="btn btn-sm btn-success text-center">
                                    <i class="fa-solid fa-plus fa-sm"></i>
                                    Create New
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body py-0">
                        <table class="table table-bordered table-striped" id="myTable">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                                    <th>@Html.DisplayNameFor(model => model.Slug)</th>
                                    <th>@Html.DisplayNameFor(model => model.Code)</th>
                                    <th class="text-start">@Html.DisplayNameFor(model => model.Discount)</th>
                                    <th class="text-start">@Html.DisplayNameFor(model => model.Condition)</th>
                                    <th>@Html.DisplayNameFor(model => model.Detail)</th>
                                    <th>Function</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Slug)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Code)</td>
                                        <td class="text-start">@Html.DisplayFor(modelItem => item.Discount)</td>
                                        <td class="text-start">@Html.DisplayFor(modelItem => item.Condition)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Detail)</td>
                                        <td>
                                            @if (item.Status == 1)
                                            {
                                                <a asp-for="@item.Status" asp-action="StatusChange" asp-route-id="@item.CouponId" class="btn btn-sm btn-success text-center btn-custom">
                                                    <i class="fa-solid fa-toggle-on fa-sm"></i>
                                                    <span class="hover-text">Change Status</span>
                                                </a>
                                            }
                                            else if (item.Status == 0)
                                            {
                                                <a asp-for="@item.Status" asp-action="StatusChange" asp-route-id="@item.CouponId" class="btn btn-sm btn-danger text-center btn-custom">
                                                    <i class="fa-solid fa-toggle-off fa-sm"></i>
                                                    <span class="hover-text">Change Status</span>
                                                </a>
                                            }else if(item.Status == 2)
                                            {
                                                <a asp-for="@item.Status" asp-route-id="@item.CouponId" class="btn btn-sm btn-secondary text-center btn-custom expired-btn">
                                                    <i class="fa-solid fa-toggle-off fa-sm"></i>
                                                    <span class="hover-text">Expired</span>
                                                </a>
                                            }

                                            <a asp-action="Edit" asp-route-id="@item.CouponId" class="btn btn-sm btn-primary text-center btn-custom">
                                                <i class="fa-solid fa-pen-to-square fa-sm"></i>
                                                <span class="hover-text">Edit</span>
                                            </a>

                                            <a asp-action="Details" asp-route-id="@item.CouponId" class="btn btn-sm btn-info text-center btn-custom">
                                                <i class="fa-solid fa-circle-info fa-sm"></i>
                                                <span class="hover-text">Details</span>
                                            </a>

                                            <a asp-action="Delete" asp-route-id="@item.CouponId" class="btn btn-sm btn-danger text-center btn-custom">
                                                <i class="fa-solid fa-trash fa-sm"></i>
                                                <span class="hover-text">Delete</span>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div> <!-- /.card-body -->
                </div> <!-- /.card -->
            </div>
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div> <!--end::App Content-->

<!-- Modal -->
<div class="modal fade" id="confirmActionModal" tabindex="-1" aria-labelledby="confirmActionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmActionModalLabel">Confirm Action</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Please extend the end date to change the status of this coupon.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Confirm</button>
            </div>
        </div>
    </div>
</div>