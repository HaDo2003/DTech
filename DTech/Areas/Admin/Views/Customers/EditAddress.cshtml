@model DTech.Models.EF.CustomerAddress

@{
    ViewData["Title"] = "Edit Address";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.mainPage = "information";
    ViewBag.page = "customer";
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="EditAddress" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!--begin::App Content Header-->
            <div class="app-content-header">
                <!--begin::Container-->
                <div class="container-fluid">
                    <!--begin::Row-->
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="mb-0">@ViewData["Title"]</h3>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-end">
                                <li class="breadcrumb-item">
                                    <a class="btn btn-sm btn-success text-center">
                                        <i class="fa-solid fa-house fa-sm"></i>
                                        Home
                                    </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a asp-action="Index">
                                        Customer
                                    </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a asp-action="Details" asp-route-id="@Model.CustomerId">
                                        Details
                                    </a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Edit Address
                                </li>
                            </ol>
                        </div>
                    </div> <!--end::Row-->
                </div> <!--end::Container-->
            </div> <!--end::App Content Header-->
            <!--begin::App Content-->
            <div class="app-content">
                <!--begin::Container-->
                <div class="container-fluid">
                    <!--begin::Row-->
                    <div class="row">
                        <div class="col-12">
                            <!-- Default box -->
                            <div class="card">
                                <div class="card-header text-center">
                                    @Html.Partial("Message")
                                </div>
                                <div class="card-body">

                                    <div class="form-group">
                                        <label asp-for="Address" class="control-label"></label>
                                        <input asp-for="Address" class="form-control" />
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>

                                    <input type="hidden" asp-for="AddressId" />
                                    <input type="hidden" asp-for="CustomerId" />

                                </div> <!-- /.card-body -->
                                <div class="card-footer">
                                    <div class="form-group">
                                        <button type="submit" value="Save" class="btn btn-primary">
                                            <i class="fa-solid fa-floppy-disk fa-sm"></i>
                                            Save
                                        </button> |
                                        <a asp-action="Details" asp-route-id="@Model.CustomerId" class="btn btn-sm btn-success text-center" style="padding-bottom: 0.5em; padding-top: 0.5em;">
                                            <i class="fa-solid fa-right-from-bracket fa-rotate-180"></i>
                                            Back to details
                                        </a>
                                    </div>
                                </div> <!-- /.card-footer-->
                            </div> <!-- /.card -->
                        </div>
                    </div> <!--end::Row-->
                </div> <!--end::Container-->
            </div> <!--end::App Content-->
        </form>
    </div>
</div>
