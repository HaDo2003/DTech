@model DTech.Models.EF.Post

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.mainPage = "information";
    ViewBag.page = "post";
}

<!--begin::App Content Header-->
<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-sm-6">
                <h3 class="mb-0">Details</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item">
                        <a class="btn btn-sm btn-success text-center">
                            <i class="fa-solid fa-house fa-sm"></i>
                            Home
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-action="Index">
                            Post
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Details
                    </li>
                </ol>
            </div>
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div> <!--end::App Content Header-->
<!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card">
                    <div class="card-body py-0">
                        <div class="row">
                            <div class="col-9">
                                <table class="table">
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                                        <td>@Html.DisplayFor(model => model.Name)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Slug)</th>
                                        <td>@Html.DisplayFor(model => model.Slug)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Status)</th>
                                        <td>
                                            @if (Model.Status.HasValue && ViewBag.StatusDictionary.ContainsKey(Model.Status.Value))
                                            {
                                                @ViewBag.StatusDictionary[Model.Status.Value]
                                            }
                                            else
                                            {
                                                <span>Unknown Status</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Cate)</th>
                                        <td>@Html.DisplayFor(model => model.Cate.Name)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.PostDate)</th>
                                        <td>@Html.DisplayFor(model => model.PostDate)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.PostBy)</th>
                                        <td>@Html.DisplayFor(model => model.PostBy)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                                        <td>@Html.Raw(Model.Description)</td>
                                    </tr>
                                </table>
                            </div>

                            <div class="col-3">
                                @Html.DisplayNameFor(model => model.Image)
                                <br />
                                <img src="~/img/PostImg/@Model.Image" alt="Post Image" width="150" />
                            </div>
                        </div>
                    </div> <!-- /.card-body -->
                    <div class="card-footer">
                        <a asp-action="Edit" asp-route-id="@Model?.PostId" class="btn btn-sm btn-primary text-center btn-custom">
                            <i class="fa-solid fa-pen-to-square fa-sm"></i>
                            Edit
                        </a> |
                        <a asp-action="Index" class="btn btn-sm btn-success text-center" style="padding-bottom: 0.3em; padding-top: 0.27em;">
                            <i class="fa-solid fa-right-from-bracket fa-rotate-180"></i>
                            Back to List
                        </a>
                    </div> <!-- /.card-footer-->
                </div> <!-- /.card -->
            </div>
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div> <!--end::App Content-->
