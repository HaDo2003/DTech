@model DTech.Models.EF.Advertisement

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--begin::App Content Header-->
            <div class="app-content-header">
                <!--begin::Container-->
                <div class="container-fluid">
                    <!--begin::Row-->
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="mb-0">Edit Advertisement</h3>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-end">
                                <li>
                                    <a asp-action="Index" class="btn btn-sm btn-success text-center">
                                        <i class="fa-solid fa-right-from-bracket fa-rotate-180"></i>
                                        Back to List
                                    </a>
                                </li>
                            </ol>
                        </div>
                    </div> <!--end::Row-->
                </div> <!--end::Container-->
            </div> <!--end::App Content Header--> <!--begin::App Content-->
            <div class="app-content">
                <!--begin::Container-->
                <div class="container-fluid">
                    <!--begin::Row-->
                    <div class="row">
                        <div class="col-12">
                            <!-- Default box -->
                            <div class="card">
                                <div class="card-body">
                                    <input type="hidden" asp-for="AdvId" />

                                    <div class="form-group">
                                        <div class="row align-items-center">
                                            <div class="col-lg-5 col-sm-6 text-center">
                                                <img src="~/img/AdvImg/@Model.Image" id="imgsquare" class="py-2" alt="" />
                                            </div>

                                            <div class="col-lg-7 col-sm-6 p-0">
                                                <label for="input-file" class="custom-upload ms-2">Update Photo</label>
                                            </div>
                                        </div>
                                        <input asp-for="ImageUpload" class="form-control custom-photo-input" id="input-file" onchange="img_pathUrl(this)" />
                                        <span asp-validation-for="ImageUpload" class="text-danger"></span>
                                    </div>
                                    <input type="hidden" asp-for="Image" />

                                    <div class="row">
                                        <div class="col">
                                            <div class="form-group">
                                                <label asp-for="Name" class="control-label"></label>
                                                <input asp-for="Name" class="form-control" />
                                                <span asp-validation-for="Name" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col">
                                            <div class="form-group">
                                                <label asp-for="Slug" class="control-label"></label>
                                                <input asp-for="Slug" class="form-control" />
                                                <span asp-validation-for="Slug" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col">
                                            <div class="form-group">
                                                <label asp-for="Status" class="control-label"></label>
                                                <select asp-for="Status" class="form-control" asp-items="ViewBag.Status"></select>
                                                <span asp-validation-for="Status" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-6 col-sm-4">
                                            <div class="form-group">
                                                <label asp-for="CreatedBy" class="control-label"></label>
                                                <input asp-for="CreatedBy" class="form-control" readonly />
                                                <span asp-validation-for="CreatedBy" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-lg-6 col-sm-8">
                                            <div class="form-group">
                                                <label asp-for="CreateDate" class="control-label"></label>
                                                <input asp-for="CreateDate" class="form-control" readonly />
                                                <span asp-validation-for="CreateDate" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-6 col-sm-4">
                                            <div class="form-group">
                                                <label asp-for="UpdatedBy" class="control-label"></label>
                                                <input asp-for="UpdatedBy" class="form-control" readonly />
                                                <span asp-validation-for="UpdatedBy" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-lg-6 col-sm-8">
                                            <div class="form-group">
                                                <label asp-for="UpdateDate" class="control-label"></label>
                                                <input asp-for="UpdateDate" class="form-control" readonly />
                                                <span asp-validation-for="UpdateDate" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                </div> <!-- /.card-body -->
                                <div class="card-footer">
                                    <div class="form-group">
                                        <button type="submit" value="Save" class="btn btn-primary">
                                            <i class="fa-solid fa-floppy-disk fa-sm"></i>
                                            Save
                                        </button>
                                    </div>
                                </div> <!-- /.card-footer-->
                            </div> <!-- /.card -->
                        </div>
                    </div> <!--end::Row-->
                </div> <!--end::Container-->
            </div> <!--end::App Content-->
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function img_pathUrl(input) {
            $("img#imgsquare")[0].src = URL.createObjectURL(input.files[0]);
        }
    </script>
}
